{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/realtime_dashboard.html",
      "dest": "/frontend/realtime_dashboard.html"
    },
    {
      "src": "/vessel_categorization_dashboard.html", 
      "dest": "/frontend/vessel_categorization_dashboard.html"
    },
    {
      "src": "/(.*\\.(html|css|js|json))",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "./backend"
  }
}
